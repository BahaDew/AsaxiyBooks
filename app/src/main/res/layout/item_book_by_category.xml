<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/app_bg_color_xira"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/item"
        android:background="?android:selectableItemBackground">

        <androidx.cardview.widget.CardView
            android:id="@+id/box_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_book"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:contentDescription="@string/app_name"
                android:scaleType="centerCrop"
                android:src="@drawable/book" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/book_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="O'tkan kunlar (Audio kitob)"
            android:textColor="#FFF"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/box_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/box_img" />

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Abdulla Qodiry"
            android:textColor="#81FFFFFF"
            android:textSize="17dp"
            app:layout_constraintLeft_toLeftOf="@id/book_name"
            app:layout_constraintTop_toBottomOf="@id/book_name" />

        <ImageView
            android:id="@+id/book_type"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/bg_type_book_circle"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/ic_menu_audio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:tint="#FF9800" />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="5dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_star_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="@id/box_img"
            app:layout_constraintLeft_toLeftOf="@id/book_name"
            app:tint="#FF9800" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_star_svgrepo_com"
            app:layout_constraintLeft_toRightOf="@id/star1"
            app:layout_constraintTop_toTopOf="@id/star1"
            app:tint="#FF9800" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_star_svgrepo_com"
            app:layout_constraintLeft_toRightOf="@id/star2"
            app:layout_constraintTop_toTopOf="@id/star2"
            app:tint="#FF9800" />
        <ImageView
            android:id="@+id/star4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            app:layout_constraintLeft_toRightOf="@id/star3"
            app:layout_constraintTop_toTopOf="@id/star3"
            android:src="@drawable/ic_star_svgrepo_com"
            app:tint="#FF9800"
            android:contentDescription="@string/app_name"/>
        <ImageView
            android:id="@+id/star5"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="6dp"
            app:layout_constraintLeft_toRightOf="@id/star4"
            app:layout_constraintTop_toTopOf="@id/star4"
            android:src="@drawable/ic_star_svgrepo_com"
            app:tint="#81FFFFFF"
            android:contentDescription="@string/app_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
