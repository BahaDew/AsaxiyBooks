<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/splashScreen">

    <fragment
        android:id="@+id/registerScreen"
        android:name="com.sudo_pacman.asaxiybooks.presenter.screen.register.RegisterScreen"
        android:label="RegisterScreen"
        tools:layout="@layout/screen_register">

        <action
            android:id="@+id/action_registerScreen_to_mainScreen"
            app:destination="@id/mainScreen"
            app:popUpTo="@id/registerScreen"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/splashScreen"
        android:name="com.sudo_pacman.asaxiybooks.presenter.screen.splash.SplashScreen"
        android:label="SplashScreen"
        tools:layout="@layout/screen_splash">

        <action
            android:id="@+id/action_splashScreen_to_introScreen"
            app:destination="@id/introScreen"
            app:popUpTo="@id/splashScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/introScreen"
        android:name="com.sudo_pacman.asaxiybooks.presenter.screen.intro.IntroScreen"
        android:label="IntroScreen"
        tools:layout="@layout/screen_intro" >
        <action
            android:id="@+id/action_introScreen_to_registerScreen"
            app:destination="@id/registerScreen"
            app:popUpTo="@id/introScreen"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainScreen"
        android:name="com.sudo_pacman.asaxiybooks.presenter.screen.main.MainScreen"
        android:label="screen_main"
        tools:layout="@layout/screen_main" />

</navigation>